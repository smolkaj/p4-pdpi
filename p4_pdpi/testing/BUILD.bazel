    name = "info_test_binary",
    srcs = ["info_test.cc"],
    data = ["main-p4info.pb.txt"],
    deps = [":test_helper"],
)

cmd_diff_test(
    name = "info_test",
    actual_cmd = "$(execpath :info_test_binary) $(location :main-p4info.pb.txt)",
    expected = "testdata/info.expected",
    tools = [
        ":info_test_binary",
        "main-p4info.pb.txt",
    ],
)

